@model BrokerFinder.ViewModels.BrokerListViewModel

@{
    ViewData["Title"] = "فهرست کارگزاران";
}

<h2>کارگزاران</h2>

<div class="row">
@foreach(var b in Model.Brokers)
{
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5>@b.FullName</h5>
                <p>@b.Description</p>
                <a class="btn btn-sm btn-primary" href="/Brokers/Details/@b.Id">نمایش</a>
            </div>
        </div>
    </div>
}
</div>

<nav>
  <ul class="pagination">
    @for(int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(i==Model.Page?"active":"")"><a class="page-link" href="?page=@i">@i</a></li>
    }
  </ul>
</nav>